<Window x:Class="FlashTelemetry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlashTelemetry" Height="720" Width="980"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded">

    <DockPanel Margin="12">

        <StackPanel DockPanel.Dock="Top" Orientation="Vertical">

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Último wheel device:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="TxtLastEsp" VerticalAlignment="Center" Width="260"/>

                <TextBlock Text="Perfil activo:" VerticalAlignment="Center" Margin="18,0,8,0"/>
                <TextBlock x:Name="TxtActiveProfile" VerticalAlignment="Center" Width="220"/>

                <Button Content="START" Width="110" Margin="18,0,8,0" Click="BtnStart_Click"/>
                <Button Content="STOP" Width="110" Click="BtnStop_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Perfil:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="CmbProfiles" Width="320" Margin="0,0,8,0"/>
                <Button Content="Aplicar" Width="110" Margin="0,0,12,0" Click="BtnApplyProfile_Click"/>

                <TextBlock Text="Resultado:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="TxtApplyResult" VerticalAlignment="Center" Width="160" Foreground="Gray" Text="-"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <CheckBox x:Name="ChkRadioEnabled" Content="Team Radio habilitado" VerticalAlignment="Center"
                          Margin="0,0,12,0"
                          Checked="ChkRadioEnabled_Checked"
                          Unchecked="ChkRadioEnabled_Unchecked"/>

                <Button x:Name="BtnRadio" Content="Ajustes…" Width="140" Click="BtnRadio_Click"/>
            </StackPanel>

        </StackPanel>

        <TextBox x:Name="TxtLog"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 FontFamily="Consolas"
                 FontSize="12"/>

    </DockPanel>
</Window>
